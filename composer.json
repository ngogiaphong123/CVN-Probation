	"require": {
		"vlucas/phpdotenv": "^5.6",
		"ext-pdo": "*",
		"ext-json": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^10",
		"squizlabs/php_codesniffer": "3.*",
		"overtrue/phplint": "^9.0"
	}
